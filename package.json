{
  "name": "flusshygiene-frontend-server",
  "version": "0.1.0",
  "description": "frontend backend for flusshygiene",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "testWithCoverage": "jest --coverage --setupFiles ../dotenv/config",
    "build:scss": "node-sass --include-path src-public/assets/scss-partials --include-path node_modules/bulma src-public/assets/scss/index.scss src-public/assets/css/index.css",
    "build:css": "postcss --config postcss.config.js < src-public/assets/css/index.css > public/assets/css/index.min.css",
    "watch:scss": "watch 'npm run build:scss && npm run build:css && npm run browsersync:scss' src-public/assets/scss src-public/assets/scss-partials --filter build-tools/watch-scss-filter.js",
    "browsersync:scss": "browser-sync reload --port 3000",
    "watch:backend": "nodemon",
    "watch:ts": "parcel watch src-public/assets/js/*  --out-dir public/assets/js/ --public-url /assets/js",
    "build:js": "parcel build src-public/assets/js/index.ts  --out-dir public/assets/js/ --public-url /assets/js",
    "dev": "npm-run-all --parallel watch:*",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "docs": "typedoc --mode modules --out docs ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabianmoronzirfas/flusshygiene.git",
    "directory": "frontend-server"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@types/browser-sync": "0.0.43",
    "@types/cors": "^2.8.4",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/got": "^9.4.1",
    "@types/helmet": "0.0.42",
    "@types/jest": "^24.0.11",
    "@types/lodash.throttle": "^4.1.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.0",
    "@types/parcel-bundler": "^1.12.0",
    "@types/passport": "^1.0.0",
    "@types/passport-auth0": "^1.0.2",
    "@types/react": "^16.8.10",
    "@types/supertest": "^2.0.7",
    "@types/ws": "^6.0.1",
    "autoprefixer": "^9.5.0",
    "babel-polyfill": "^6.26.0",
    "browser-sync": "^2.26.5",
    "core-js": "^3.0.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.16.0",
    "eslint-config-unobtrusive": "^1.2.2",
    "jest": "^24.7.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "postcss-preset-env": "^6.6.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.4",
    "watch": "^1.0.2",
    "whatwg-fetch": "^3.0.0"
  },
  "author": "Fabian Mor√≥n Zirfas",
  "license": "MIT",
  "dependencies": {
    "@tsb/flusshygiene-utils": "^0.5.2",
    "bulma": "^0.7.4",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "express-react-views": "^0.11.0",
    "express-session": "^1.16.1",
    "got": "^9.6.0",
    "helmet": "^3.16.0",
    "lodash.throttle": "^4.1.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-auth0": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "redux": "^4.0.1",
    "ws": "^6.2.1"
  },
  "keywords": [
    "react",
    "express"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
